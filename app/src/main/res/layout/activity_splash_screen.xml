<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.SplashScreenActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/imgSizeBig"
        android:layout_height="@dimen/imgSizeBig"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/splashimg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvSplashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_centerHorizontal="true"
        android:text="@string/splash_screen_tv"
        android:textColor="@color/LightBej"
        android:textSize="@dimen/textSizeBig"
        android:textStyle="bold"
        app:fontFamily="@font/berkshire_swash" />


</RelativeLayout>